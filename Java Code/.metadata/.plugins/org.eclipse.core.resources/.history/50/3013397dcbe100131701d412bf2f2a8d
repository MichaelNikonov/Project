package Server;

import java.sql.*;

public final class Database {

	private Connection _conn;
	
	public Database(String sqlHost, String sqlDatabase, String sqlUser, String sqlPassword) {
		try {
			_conn = DriverManager.getConnection(
					"jdbc:mysql://" + sqlHost + "/" + sqlDatabase,
					sqlUser, sqlPassword);
		} catch (SQLException e) {
			_conn = null;
			// handle error
		}
	}
	
	private ResultSet selectQuery(String[] fields, String from, String where, String groupBy) {
		try {
			Statement stmt = _conn.createStatement();
			String q = "SELECT ";
			for (int i=0; i<fields.length;i++)
				q += (fields[i] + " ");
			q += ("FROM " + from + " WHERE" + where + " GROUP BY " + groupBy);
			return stmt.executeQuery(q);
		} catch (SQLException e) {
			// handle
			return null;
		}
	}
	
	
	
	
	
}
